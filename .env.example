# StudySnap Backend 환경변수 설정
# Railway 배포 시 이 파일을 참고하여 환경변수 설정

# ================================
# 필수 설정
# ================================

# Anthropic API 키 (Claude Vision API)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 서버 설정
PORT=8000
HOST=0.0.0.0
DEBUG=False

# 파일 업로드 설정
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf

# CORS 설정 (쉼표로 구분)
ALLOWED_ORIGINS=*

# ================================
# 라이선스 설정 (체험판)
# ================================

# 체험판 사용 기간 (일)
TRIAL_DAYS=15

# 라이선스 활성화 날짜 (YYYY-MM-DD 형식, 비워두면 첫 접속 시 자동 설정)
LICENSE_START_DATE=

# ================================
# 데이터베이스 설정
# ================================

# SQLite (기본값) - Railway에서도 사용 가능
DATABASE_URL=sqlite:///database/studysnap.db

# PostgreSQL 사용 시 (정식 도입 - Railway PostgreSQL 플러그인)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ================================
# 교회 연동 설정 (여의도순복음교회)
# ================================

# FG라디오 스트리밍 URL
FG_RADIO_STREAM_URL=

# ARS 헌금 전화번호
ARS_OFFERING_NUMBER=

# 교회 홈페이지 헌금 URL
CHURCH_OFFERING_URL=https://www.fgtv.com

# ================================
# 기능 제한 설정 (체험판)
# ================================

# 일일 PDF 변환 제한 횟수
DAILY_CONVERT_LIMIT=10

# 최대 저장 주보 개수
MAX_BULLETINS=30

# 편집기 모드 (readonly / full)
EDITOR_MODE=readonly
